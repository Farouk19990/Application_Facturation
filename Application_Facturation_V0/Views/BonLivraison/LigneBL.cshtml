@model List<LigneBL>;
@{
    BonLivraison bonLiv = (BonLivraison)ViewData["bonL"];
    List<LigneBL> ligneBonLivraisons = new List<LigneBL>();
    ligneBonLivraisons = (List<LigneBL>)ViewData["ligneBLs"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/img/favicon.png">
    <title>
        Argon Dashboard 2 by Creative Tim
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="/assets/css/argon-dashboard.css?v=2.0.4" rel="stylesheet" />
    <!-- SCRIPT -->
    <link src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" />
</head>

<body>
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6 style="display:inline">Bon Livraison</h6><p class="font-weight-bolder opacity-7" style="display:inline"> #@bonLiv.bonLivraison_id</p><h6 style="display:inline"> Date</h6><p class="font-weight-bolder opacity-7" style="display:inline"> @bonLiv.date_bL</p>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ligne BL</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Produit</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Quantity</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Remise (%)</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Prix Unitaire</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">TVA (%) </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prix TTC</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ligneBonLivraisons)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="/assets/flaticon/BL_0.png" style="margin-right:20px;" alt="user1">

                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">lBL#@item.bonLivraison_id</h6>

                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.produitBL.designation</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">@item.qte</p>

                                        </td>


                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.remise</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.prix_unitaire_ht</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.tva</span>
                                        </td>

                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold"> @(((item.prix_unitaire_ht * item.qte) * (1 - (item.remise / 100))) * (1 + (item.tva / 100)))</span>
                                        </td>

                                    </tr>
                                }
                                <tr>
                                    <th class="align-middle text-center" colspan="5" rowspan="5"><span class="text-secondary text-lg-right font-weight-bold"> BON LIVRAISON </span></th>
                                </tr>
                                <tr>



                                    <td class="align-middle text-center">

                                        <span class="text-secondary text-sm font-weight-bold"> Total Remise</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-sm font-weight-bold"> @bonLiv.total_remise</span>

                                    </td>

                                </tr>
                                <tr>

                                    <td class="align-middle text-center">

                                        <span class="text-secondary text-sm font-weight-bold"> Total Tva</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-sm font-weight-bold"> @bonLiv.total_tva</span>

                                    </td>

                                </tr>
                                <tr>

                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-sm font-weight-bold"> Total HT</span>

                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-sm font-weight-bold"> @bonLiv.total_ht</span>

                                    </td>

                                </tr>
                                <tr>

                                    <td class="align-middle text-center">

                                        <span class="text-secondary text-sm font-weight-bold"> Total TTC</span>
                                    </td>
                                    <td class="align-middle text-center">

                                        <span class="text-secondary text-sm font-weight-bold"> @bonLiv.total_ttc</span>
                                    </td>

                                </tr>
                                <tr></tr>

                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="/assets/js/core/popper.min.js"></script>
    <script src="/assets/js/core/bootstrap.min.js"></script>
    <script src="/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="/assets/js/plugins/chartjs.min.js"></script>

    <script>
        // JavaScript/jQuery code to handle "Edit" button click and populate the modal
        $(document).ready(function () {
            $('.edit-btn').click(function () {
                var clientId = $(this).data('client-id');
                var clientName = $(this).data('client-name');
                var clientEmail = $(this).data('client-email');

                // Populate the modal with the data
                $('#mod').load('/YourController/EditPartial?clientId=' + clientId + '&clientName=' + clientName + '&clientEmail=' + clientEmail);
            });
        });
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="/assets/js/argon-dashboard.min.js?v=2.0.4"></script>
</body>

</html>
