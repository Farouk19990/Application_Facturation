@model Client

@{
    ViewData["Title"] = "Edit";
}

<div class="modal fade" id="editModal-@Model.id_client" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="mod">

                <div class="container mt-5 mb-5 d-flex justify-content-center">
                    <div class="card px-1 py-4">
                        <div class="card-body">

                            <form asp-action="Edit">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <!-- <label for="name">Name</label> --> <input asp-for="nom_client" class="form-control" type="text" placeholder="Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <!-- <label for="name">Name</label> --> <input asp-for="prenom_client" class="form-control" type="text" placeholder="Last Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="input-group"> <input asp-for="address_client" class="form-control" type="text" placeholder="Address"> </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="input-group"> <input asp-for="email_client" class="form-control" type="text" placeholder="Email"> </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <div class="input-group"> <input asp-for="telephone_client" class="form-control" type="text" placeholder="Mobile"> </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info" asp-route-id=@Model.id_client asp-action="Edit"><i class="bi bi-plus-circle"></i> Add </button>
                                <div class=" d-flex flex-column text-center px-5 mt-3 mb-3"> <small class="agree-text">By Booking this appointment you agree to the</small> <a href="#" class="terms">Terms & Conditions</a> </div> <button class="btn btn-primary btn-block confirm-button">Confirm</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>